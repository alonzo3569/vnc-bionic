<launch>

    <!-- Params -->
    <arg name="joystick_port" default="/dev/input/js0"/>

    <!-- Joystick -->
    <node pkg="joystick_control" type="joystick_control.py" name="joystick_control" />

    <node pkg="joy" type="joy_node" name="joy_node">
        <param name="dev" value="$(arg joystick_port)" />
    </node>

</launch>

